
colorscheme molokai

" line number
set number

" initiate mouse
set mouse=a
set ttymouse=xterm2

" for search
set incsearch
set hlsearch
" " ignorecase
set ic

" close file confirm
set confirm 

" remain indent
set ai

" current line reminder
set cursorline

" do not change lines
set nowrap

" 80 characters remind code length
set cc=80


